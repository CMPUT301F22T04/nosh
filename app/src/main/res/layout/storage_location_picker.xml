<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/storage_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#DDDDDD"
        android:text="Storage Location"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/storage_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/storage_picker"
        android:layout_alignParentStart="true"
        android:backgroundTint="#DDDDDD"
        android:hint="Where should this be stored?"
        android:textAllCaps="false"
        android:textColor="#B6B6B6"
        android:textSize="16sp" />

    <Button
        android:id="@+id/confirm_location_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/storage_input"
        android:layout_alignParentStart="true"
        android:backgroundTint="#73F16B"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</RelativeLayout>