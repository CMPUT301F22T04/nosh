<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="?attr/actionModeCloseDrawable"
        android:text="Cancel"
        app:backgroundTint="#FFFFFF" />


    <EditText
        android:id="@+id/add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/description_border"
        android:hint="Recipe Name"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/Image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/add_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/nosh_logo" />


    <EditText
        android:id="@+id/prep_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Image"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal"
        android:background="@drawable/description_border"
        android:gravity="center"
        android:hint="Enter Prep time in mins (ie '20')'" />


    <EditText
        android:id="@+id/serving_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prep_input"
        android:inputType="number"
        android:background="@drawable/description_border"
        android:gravity="center"
        android:hint="Enter Servings (ie '2')'" />

    <EditText
        android:id="@+id/category_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/serving_input"
        android:gravity="center"
        android:hint="Enter Category (ie 'Vegan')'"
        android:background="@drawable/description_border" />

    <Button
        android:id="@+id/add_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:text="Click to ADD ingredient" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/add_ingredient"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/black"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintHeight="true" />



    <TextView
        android:id="@+id/comment_text"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/recycler_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:text="Comments"
        android:textSize="10pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_description"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/comment_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/description_border"
        android:gravity="start"
        android:hint="Comments..."
        android:inputType="textMultiLine"
        android:maxLength="30"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:textSize="16sp" />





    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_description"
        android:layout_marginTop="0dp"
        android:text="Add"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="#22AE66" />


</RelativeLayout>