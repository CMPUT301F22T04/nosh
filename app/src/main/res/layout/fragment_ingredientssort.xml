<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/titleE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort Ingredients by"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="20dp" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleE"
        android:orientation="horizontal"
        android:id="@+id/RGroup">


        <RadioButton
            android:id="@+id/Ascending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Ascending" />

        <RadioButton
            android:id="@+id/Descending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"



            android:text="Descending" />
    </RadioGroup>

    <Button
        android:id="@+id/sort_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:padding="10dp"
        android:layout_below="@id/RGroup"/>

    <Button
        android:id="@+id/sort_bestbefore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Best Before Date"
        android:padding="10dp"
        android:layout_below="@id/sort_description"/>

    <Button
        android:id="@+id/sort_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:padding="10dp"
        android:layout_below="@id/sort_bestbefore"/>

    <Button
        android:id="@+id/sort_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:padding="10dp"
        android:layout_below="@id/sort_location"/>

</RelativeLayout>